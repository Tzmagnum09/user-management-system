{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit User'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12 mb-4">
        <a href="{{ path('admin_users') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> {{ 'Back to users'|trans }}
        </a>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-gradient-primary text-white">
                <h4>{{ 'Edit User'|trans }}: {{ user.firstName }} {{ user.lastName }}</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.firstName, {
                                label: 'First name'|trans
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lastName, {
                                label: 'Last name'|trans
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email, {
                                label: 'Email'|trans
                            }) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.username, {
                                label: 'Username'|trans
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ form_row(form.street, {
                                label: 'Street'|trans
                            }) }}
                        </div>
                        <div class="col-md-2 mb-3">
                            {{ form_row(form.houseNumber, {
                                label: 'House number'|trans
                            }) }}
                        </div>
                        <div class="col-md-2 mb-3">
                            {{ form_row(form.boxNumber, {
                                label: 'Box number'|trans
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.postalCode, {
                                label: 'Postal code'|trans
                            }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.city, {
                                label: 'City'|trans
                            }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.country, {
                                label: 'Country'|trans
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.phoneNumber, {
                                label: 'Phone number'|trans
                            }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.birthDate, {
                                label: 'Birth date'|trans
                            }) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.locale, {
                                label: 'Preferred language'|trans
                            }) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary me-md-2">
                            {{ 'Cancel'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> {{ 'Save'|trans }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}