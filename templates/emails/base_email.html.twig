        {% block header %}
            <div class="header">
                <h1 style="margin: 0; color: white; font-size: 24px;">{% block header_title %}{{ app_name }}{% endblock %}</h1>
            </div>
        {% endblock %}
        
        <div class="content">
            {% block content %}{% endblock %}
        </div>
        
        {% block footer %}
            <div class="footer">
                <p>&copy; {{ "now"|date("Y") }} {{ app_name }}. {{ "Tous droits réservés."|trans }}</p>
                <p>{{ "Cet email a été envoyé automatiquement, merci de ne pas y répondre."|trans }}</p>
