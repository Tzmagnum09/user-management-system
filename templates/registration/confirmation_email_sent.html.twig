{% extends 'base.html.twig' %}

{% block title %}{{ 'Registration Confirmation'|trans }} - {{ parent() }}{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h2>{{ 'Registration Complete'|trans }}</h2>
            </div>
            <div class="card-body text-center">
                <p>{{ 'An email has been sent to'|trans }} <strong>{{ userEmail }}</strong> {{ 'to verify your email address.'|trans }}</p>
                <p>{{ 'Please check your email and click on the verification link to complete your registration.'|trans }}</p>
                <p>{{ 'Once verified, your account will be reviewed by an administrator for approval.'|trans }}</p>
                <p>{{ 'If you do not receive an email within a few minutes, please check your spam folder.'|trans }}</p>
            </div>
            <div class="card-footer text-center">
                <a href="{{ path('app_login') }}" class="btn btn-primary">{{ 'Return to login'|trans }}</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
